// native compilation

#include "../env.docker"

// prepare sources

RUBY_VERSION="ruby-2.4.1"

set -x
cd /src \
    && wget -cq "https://cache.ruby-lang.org/pub/ruby/2.4/ruby-2.4.1.tar.xz" \
    && tar xfp ruby-2.4.1.tar* \
    && wget -cq "http://ftp.gnu.org/pub/gnu/ncurses/ncurses-5.9.tar.gz" \
    && tar xfp ncurses-5.9.tar* \
    && wget -cq "ftp://ftp.gnu.org/gnu/readline/readline-6.3.tar.gz" \
    && tar xfp readline-6.3.tar*
[ "$?" != "0" ] && exit 1

// zlib

cd ${CROS_HOST_PREFIX}/${CROS_TARGET} \
    && tar xfp /dist/zlib*${CROS_PKG_ARCH}*.tar.xz \
    && tar xfp /dist/openssl*${CROS_PKG_ARCH}*.tar.xz \
    && cd ${CROS_HOST_PREFIX}/${CROS_TARGET}/lib \
    && ln -s ${CROS_HOST_PREFIX}/${CROS_TARGET}${CROS_TARGET_LIB}/lib* .
[ "$?" != "0" ] && exit 1

// ncurses and readline

#ifdef CHROMEBREW_ARMV8
ENV NCURSES_TARGET arm-linux-gnueabihf
#else
ENV NCURSES_TARGET ${CROS_TARGET}
#endif

cd /src/ncurses* \
    && CC=${CROS_TARGET}-gcc RANLIB=${CROS_TARGET}-ranlib ./configure \
        --prefix=${CROS_HOST_PREFIX}/${CROS_TARGET} \
        --build=${CROS_HOST} \
        --host=${NCURSES_TARGET} \
        --with-shared \
    && make -j ${CROS_CORES} \
    && make install
[ "$?" != "0" ] && exit 1

cd /src/readline* \
    && CC=${CROS_TARGET}-gcc RANLIB=${CROS_TARGET}-ranlib ./configure \
        bash_cv_wcwidth_broken=no \
        --prefix=${CROS_HOST_PREFIX}/${CROS_TARGET} \
        --build=${CROS_HOST} \
        --host=${CROS_TARGET} \
        --with-curses \
    && make -j ${CROS_CORES} \
    && make install
[ "$?" != "0" ] && exit 1

// ruby

pkgname=${RUBY_VERSION}-chromeos-${CROS_PKG_ARCH} \
    && cd /src/${RUBY_VERSION}* \
    && CC=${CROS_TARGET}-gcc RANLIB=${CROS_TARGET}-ranlib ./configure \
        --prefix=${CROS_TARGET_PREFIX} \
        --build=${CROS_HOST} \
        --host=${CROS_TARGET} \
        --with-baseruby=ruby \
        --with-openssl-dir=${CROS_HOST_PREFIX}/${CROS_TARGET}${CROS_TARGET_PREFIX} \
        --with-zlib-dir=${CROS_HOST_PREFIX}/${CROS_TARGET}${CROS_TARGET_PREFIX} \
        --with-readline-dir=${CROS_HOST_PREFIX}/${CROS_TARGET} \
    && make -j ${CROS_CORES} \
    && find . -name '*.so' -print | xargs ${CROS_TARGET}-strip -S \
    && make DESTDIR=${CROS_HOST_DEST}/${pkgname} install \
    && ${CROS_TARGET}-strip ${CROS_HOST_DEST}/${pkgname}${CROS_TARGET_PREFIX}/bin/ruby \
    && mv ${CROS_HOST_DEST}/${pkgname}/var/lib/gems ${CROS_HOST_DEST}/${pkgname}${CROS_TARGET_PREFIX}/lib/ruby \
    && rm -rf ${CROS_HOST_DEST}/${pkgname}/var \
    && cd "${CROS_HOST_DEST}/${pkgname}" \
    && sh ../create_package.sh \
    && rm -rf "${CROS_HOST_DEST}/${pkgname}"
